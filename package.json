{
  "name": "responsive-html-email-signature",
  "version": "6.0.0",
  "description": "Responsive template for emails & email signatures.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danmindru/responsive-html-email-signature.git"
  },
  "keywords": [
    "responsive",
    "template",
    "email",
    "signature",
    "email-signatures",
    "inline-styles",
    "watches-html"
  ],
  "author": "Dan Mindru <mindrudan@gmail.com> (https://mindrudan.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danmindru/responsive-html-email-signature/issues"
  },
  "homepage": "https://github.com/danmindru/responsive-html-email-signature#readme",
  "scripts": {
    "start": "node ./node_modules/.bin/gulp",
    "once": "node ./node_modules/.bin/gulp run-pipeline",
    "deploy": "npm run test && cp -r dist demo && git push origin `git subtree split --prefix demo develop`:gh-pages --force",
    "e2e-test": "npm run once && node ./node_modules/.bin/ava",
    "format": "prettier {tasks,tests}/**/*.js gulpfile.js .eslintrc.js --write",
    "lint": "eslint ./**/*.js gulpfile.js"
  },
  "dependencies": {
    "autoprefixer": "^9.6.1",
    "chalk": "^2.4.2",
    "del": "^5.1.0",
    "graceful-fs": "^4.2.3",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-david": "^1.0.1",
    "gulp-inline-css": "^3.5.0",
    "gulp-inline-images-no-http": "^1.3.0",
    "gulp-jsonlint": "^1.3.1",
    "gulp-less": "^4.0.1",
    "gulp-minify-html": "~1.0.5",
    "gulp-minify-inline": "^1.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-preprocess": "^3.0.3",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "klaw": "^3.0.0",
    "node-sass": "^4.13.1"
  },
  "resolutions": {
    "graceful-fs": "^4.1.15"
  },
  "devDependencies": {
    "ava": "^3.4.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gulp-cli": "^2.2.0",
    "husky": "^3.0.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "browserslist": [
    "last 5 versions"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run e2e-test",
      "pre-commit": "npm run lint && ./node_modules/.bin/pretty-quick --staged --pattern ./**/*.js"
    }
  }
}
